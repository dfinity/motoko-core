{
  "$schema": "http://json-schema.org/draft-07/schema",
  "properties": {
    "$schema": { "type": "string" },
    "specs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "extends": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "modules": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "functions": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["name", "modules", "functions"],
        "additionalProperties": false
      }
    }
  },
  "required": ["specs"],
  "additionalProperties": false
}
