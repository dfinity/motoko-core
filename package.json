  "bugs": {
    "url": "https://github.com/dfinity/new-motoko-base/issues"
  },
  "homepage": "https://github.com/dfinity/new-motoko-base#readme",
  "devDependencies": {
    "execa": "^4.1.0",
    "fast-glob": "^3.3.2",
    "husky": "^9.1.7",
    "ic-mops": "^1.1.1",
    "mo-dev": "^0.13.0",
    "npm-run-all": "^4.1.5",
    "prettier": "2",
    "prettier-plugin-motoko": "^0.10.3",
    "pretty-quick": "3",
    "tsx": "^4.19.2"
  }
